@model Notlarim101.Entity.ValueObject.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<link href="~/Content/Login-RegisterStyle.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <div class="logreg">
        <main class="form-signin">
            <form>
                <img class="mb-4" src="/docs/5.1/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
                <h1 class="h3 mb-3 fw-normal">Giriş Formu</h1>

                @Html.ValidationSummary(false)
                <div class="form-floating">
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı", id = "floatingInput" })
                    <label for="floatingInput">Kullanıcı Adı</label>
                </div>
                <div class="form-floating">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email", id = "floatingEmail" })
                    <label for="floatingEmail">Email</label>
                </div>

                <div class="form-floating">
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifre", id = "floatingPassword", type = "password" })
                    <label for="floatingPassword">Şifre</label>
                </div>
                <div class="form-floating">
                    @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Şifre Tekrar", id = "floatingPassword", type = "password" })
                    <label for="floatingPassword">Şifre</label>
                </div>

                @*<div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" value="remember-me"> Remember me
                        </label>
                    </div>*@
                <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
                <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
            </form>
        </main>
    </div>
}



<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script type="text/javascript">

    //Jquery örneği
    $(document).ready(function () {
        $("footer").hide();
        $("header").hide();
        $("#category1").hide();
        $("#category3").addClass("col-md-12").removeClass("col-md-10");
    });
</script>


