@model IEnumerable<Notlarim101.Entity.Note>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.css">
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.js"></script>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<br />
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDraft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LikeCount)
            </th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>


                <td>
                    @Html.DisplayFor(modelItem => item.Category.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDraft)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LikeCount)
                </td>
                <td>
                    @Bootstrap.LinkButton("/Note/Edit/" + item.Id, "warning", "btn-sm", "Güncelle", "bi bi-pencil", string.Empty) |
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                    @Bootstrap.LinkButton("/Note/Details/" + item.Id, "info", "btn-sm", "Güncelle", "bi bi-search", string.Empty) |
                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                    @Bootstrap.LinkButton("/Note/Delete/" + item.Id, "danger", "btn-sm", "Güncelle", "bi bi-trash", string.Empty)
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            </tr>

        }
    </tbody>

</table>


<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>


